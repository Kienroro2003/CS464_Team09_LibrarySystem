<Page x:Class="LS.View.Book"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Book">
    <DockPanel LastChildFill="True" Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Label Content="QUẢN LÝ SÁCH" FontWeight="ExtraBold" Margin="0,0,220,0" Width="150" Height="30" />
            <TextBox x:Name="txtSearch" Width="250" Height="30" Margin="0,0,10,0" VerticalContentAlignment="Center" ToolTip="Nhập từ khóa tìm kiếm" Tag="Search..." />
            <Button x:Name="btnSearch" Content="Tìm kiếm" Width="100" Height="30"/>
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,10">
            <Button x:Name="btnAddNew" Content="Thêm Mới" Width="100" Height="30" Margin="0,0,10,0" Click="BtnAddNew_Click"/>
            <ComboBox x:Name="cbCategory" Width="180" Height="30">
                <ComboBoxItem Content="All"/>
                <ComboBoxItem Content="Fiction"/>
                <ComboBoxItem Content="Science"/>
                <ComboBoxItem Content="History"/>
            </ComboBox>
        </StackPanel>
        <DataGrid x:Name="dgBooks" AutoGenerateColumns="False" CanUserAddRows="False" Height="350" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Title}" Width="15"/>
                <DataGridTextColumn Header="Tên sách" Binding="{Binding Title}" Width="*"/>
                <DataGridTextColumn Header="Tác giả" Binding="{Binding Author}" Width="150"/>
                <DataGridTextColumn Header="NXB" Binding="{Binding Author}" Width="100"/>
                <DataGridTextColumn Header="Thể loại" Binding="{Binding Category}" Width="100"/>
                <DataGridTextColumn Header="Số Trang" Binding="{Binding Category}" Width="60"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding Price}" Width="60"/>
                <DataGridTextColumn Header="Hình ảnh" Binding="{Binding Price}" Width="90"/>
                <DataGridTemplateColumn Header="Sửa" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnEdit" Content="Edit" Width="60"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="Xóa" Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button x:Name="btnDelete" Content="Delete" Width="60"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
            <DataGrid.Items>
            </DataGrid.Items>
        </DataGrid>
    </DockPanel>
</Page>