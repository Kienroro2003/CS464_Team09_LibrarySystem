<Window x:Class="LS.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LS"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">

    <DockPanel LastChildFill="True">
        <!--<DockPanel.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF0066FF" Offset="0"/>
                <GradientStop Color="#FFFF6600" Offset="1"/>
            </LinearGradientBrush>
        </DockPanel.Background>-->

        <Border DockPanel.Dock="Left" Width="300" Margin="20" CornerRadius="15" Background="LightGray">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <!-- Ảnh đại diện -->
                <Ellipse Width="120" Height="120" Stroke="White" StrokeThickness="3" Margin="0,0,0,20">
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="https://cdn.vectorstock.com/i/1000v/00/11/elegant-vintage-library-badge-vector-40940011.jpg"/>
                    </Ellipse.Fill>
                </Ellipse>

                <TextBlock Text="Welcome to your" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Library" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="Management" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="System" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <Border Margin="20" CornerRadius="15" Background="LightBlue" Padding="30">
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="Librix" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock Text="ĐĂNG NHẬP" FontSize="18" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Username" Margin="0,5,0,2"/>
                <TextBox Height="35" Margin="0,0,0,10"/>

                <TextBlock Text="Password" Margin="0,5,0,2"/>
                <PasswordBox Height="35" Margin="0,0,0,10"/>

                <TextBlock Text="Forgot Password / Username" 
                   FontSize="12" Foreground="Gray"
                   HorizontalAlignment="Right" Margin="0,0,0,20"/>

                <Button Content="Đăng nhập" Height="40" Width="100" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
