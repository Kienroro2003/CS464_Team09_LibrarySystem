<Page x:Class="LS.View.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User" 
        Background="White"
        Loaded="Window_Loaded">

    <DockPanel>
        <TextBlock Text="USERS"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="#59c241"
                   HorizontalAlignment="Center"
                   DockPanel.Dock="Top"
                   Margin="20"/>

        <StackPanel Orientation="Horizontal" 
            HorizontalAlignment="Right" 
            DockPanel.Dock="Top"
            Margin="0,0,30,0">
            <Button Content="🔍 Tìm Kiếm"
                Width="117"
                HorizontalAlignment="Right"
                Margin="0,0,32.6,0"
                Background="#59c241"
                Foreground="White"
                FontWeight="Bold"
                Padding="5"
                DockPanel.Dock="Top"
                Click="Search_Click"
                Height="42"/>

            <Button Content="➕ Thêm"
            Width="117"
            Height="42"
            Background="#59c241"
            Foreground="White"
            FontWeight="Bold"
            Padding="5"
            Click="AddUser_Click"/>
        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">
            <ItemsControl ItemsSource="{Binding Users}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="10" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="15" 
                                BorderBrush="#59c241" 
                                BorderThickness="2"
                                Background="White"
                                Margin="10"
                                Width="450"
                                Padding="15"
                                MouseLeftButtonDown="Border_MouseLeftButtonDown">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Ellipse Width="80" Height="80" Grid.Column="0">
                                    <Ellipse.Fill>
                                        <ImageBrush 
                                            ImageSource="https://cellphones.com.vn/sforum/wp-content/uploads/2023/10/avatar-trang-4.jpg" 
                                            Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="{Binding fullname}" FontWeight="Bold" FontSize="16"/>
                                    <TextBlock Text="{Binding address}" Foreground="Gray"/>
                                    <TextBlock Text="Gender: " FontWeight="Bold" Foreground="Gray">
                                        <Run Text="{Binding gender}"/>
                                    </TextBlock>
                                    <TextBlock Text="Birthday: " FontWeight="Bold" Foreground="Gray">
                                        <Run Text="{Binding birthday}"/>
                                    </TextBlock>
                                    <TextBlock Text="Phone: " FontWeight="Bold" Foreground="Gray">
                                        <Run Text="{Binding phone}"/>
                                    </TextBlock>

                                    <Button Content="DELETE" 
                                            Background="Red"
                                            Foreground="White"
                                            Padding="5 2"
                                            Width="70"
                                            HorizontalAlignment="Right"
                                            Margin="0,5,0,0"
                                            Click="DeleteUser_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </DockPanel>
</Page>