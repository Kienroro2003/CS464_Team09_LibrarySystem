<Page  x:Class="LS.View.AddBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LS.View"
        mc:Ignorable="d"
        Title="AddBook" Height="450" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.ColumnSpan="2" Content="THÊM SÁCH" FontWeight="ExtraBold" Margin="0,0,20,0"/>

        <!-- Tên sách -->
        <TextBlock Text="Tên sách:" Grid.Row="1" Grid.Column="0" Margin="0 8" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTenSach" Grid.Row="1" Grid.Column="1" Margin="0 8" Height="30"/>

        <!-- Tác giả -->
        <TextBlock Text="Tác giả:" Grid.Row="2" Grid.Column="0" Margin="0 8" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTacGia" Grid.Row="2" Grid.Column="1" Margin="0 8" Height="30"/>

        <!-- Nhà xuất bản -->
        <TextBlock Text="Nhà xuất bản:" Grid.Row="3" Grid.Column="0" Margin="0 8" VerticalAlignment="Center"/>
        <TextBox x:Name="txtNhaXuatBan" Grid.Row="3" Grid.Column="1" Margin="0 8" Height="30"/>

        <!-- Thể loại -->
        <TextBlock Text="Thể loại:" Grid.Row="4" Grid.Column="0" Margin="0 8" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbTheLoai" Grid.Row="4" Grid.Column="1" Margin="0 8"
                  ItemsSource="{Binding Categories}" Height="30"/>

        <!-- Số lượng & Số trang trên cùng một hàng -->
        <Grid Grid.Row="5" Grid.ColumnSpan="2" Margin="0 8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Cột trái: Số lượng -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0 0 10 0">
                <TextBlock Text="Số lượng:" VerticalAlignment="Center" Margin="0 0 100 0"/>
                <TextBox x:Name="txtSoLuong" Width="100" Height="30"/>
            </StackPanel>

            <!-- Cột phải: Số trang -->
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <TextBlock Text="Số trang:" VerticalAlignment="Center" Margin="0 0 100 0"/>
                <TextBox x:Name="txtSoTrang" Width="100" Height="30"/>
            </StackPanel>
        </Grid>

        <!-- Hình ảnh -->
        <TextBlock Text="Hình ảnh:" Grid.Row="6" Grid.Column="0" Margin="0 8" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" Margin="0 8">
            <TextBox x:Name="txtHinhAnh" Width="250" IsReadOnly="True" Margin="0,0,8,0" Height="30"/>
            <Button Content="Chọn..." Width="70" />
        </StackPanel>

        <!-- Nút hành động -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,9.6,-0.4,-0.4" VerticalAlignment="Top" Grid.Column="1" Height="46">
            <Button Content="Lưu" Width="100" Margin="0 0 10 0" Height="35"/>
            <Button Content="Huỷ" Width="100" Height="35"/>
        </StackPanel>
    </Grid>
</Page>
