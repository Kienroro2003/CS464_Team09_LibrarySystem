<Window x:Class="LS.Form_Search_user"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LS"
        mc:Ignorable="d"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="Form_Search_user" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Grid.Row="0" Grid.Column="1">
            <Label Content="Search User" FontSize="30" Margin="5"/>
        </GroupBox>
        <GroupBox Grid.Column="1" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <GroupBox Grid.Column="0" Grid.Row="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="27.073"/>
                            <ColumnDefinition Width="56.127"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" Content="User ID" Margin="5" Grid.ColumnSpan="2"/>
                        <Label Grid.Column="0" Grid.Row="1" Content="User Name" Margin="5" Grid.ColumnSpan="2"/>
                        <Label Grid.Column="0" Grid.Row="2" Content="Password" Margin="5" Grid.ColumnSpan="2"/>
                        <Label Grid.Column="0" Grid.Row="3" Content="Full Name" Margin="5" Grid.ColumnSpan="2"/>
                        <Label Grid.Column="0" Grid.Row="4" Content="Gender" Margin="5" Grid.ColumnSpan="2"/>
                        <Label Grid.Column="0" Grid.Row="5" Content="Birthday" Margin="5" Grid.ColumnSpan="2"/>
                        <Label Grid.Column="0" Grid.Row="6" Content="Address" Margin="5" Grid.ColumnSpan="2"/>
                        <Label Grid.Column="0" Grid.Row="7" Content="Phone" Margin="5" Grid.ColumnSpan="2"/>
                        <TextBox x:Name="txt_userid" Grid.Column="2" Grid.Row="0" Margin="6.8,7,7.2,7"/>
                        <TextBox x:Name="txt_username" Grid.Column="2" Grid.Row="1" Margin="6.8,7,7.2,7"/>
                        <PasswordBox x:Name="txt_pass" Grid.Column="2" Grid.Row="2" Margin="6.8,7,7.2,7"/>
                        <TextBox x:Name="txt_fullname" Grid.Column="2" Grid.Row="3" Margin="6.8,7,7.2,7"/>
                        <WrapPanel Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2" Margin="55.927,0,0.2,0">
                            <RadioButton x:Name="rb_male" Content="Male" Margin="7"/>
                            <RadioButton x:Name="rb_female" Content="female" Margin="7"/>
                        </WrapPanel>
                        <DatePicker Grid.Column="2" Grid.Row="5" x:Name="txt_birth"  SelectedDate="{x:Static sys:DateTime.Now}" DisplayDateStart="1900-01-01" DisplayDateEnd="2100-12-31" Margin="6.8,7,7.2,7"/>
                        <TextBox x:Name="txt_addess" Grid.Column="2" Grid.Row="6" Margin="6.8,7,7.2,6.2"/>
                        <TextBox x:Name="txt_phone" Grid.Column="2" Grid.Row="7" Margin="6.8,6.8,7.2,7.2"/>
                    </Grid>
                </GroupBox>
                <GroupBox Grid.Column="1" Grid.Row="0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="6*"/>
                        </Grid.RowDefinitions>
                        <Label Content="Role" Margin="7" Grid.Column="0" Grid.Row="0"/>
                        <ComboBox x:Name="cb_role" Grid.Column="1" Grid.Row="0" Margin="7">
                            <ComboBoxItem Content="User"/>
                            <ComboBoxItem Content="Admin"/>
                        </ComboBox>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Column="1" Grid.Row="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Cancel" Grid.Column="0" Grid.Row="2"/>
                <Button Content="Search" Grid.Column="4" Grid.Row="2" />
            </Grid>
        </GroupBox>

    </Grid>
</Window>
