<Window x:Class="LS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LS"
        mc:Ignorable="d"
        Title="Hệ thống Thư viện" Height="600" Width="900" WindowState="Maximized">
    <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="14">
            <MenuItem Header="_Trang chủ">
            </MenuItem>
            <MenuItem Header="_Quản lý">
                <MenuItem Header="Quản lý Người dùng" Click="MenuItem_UserManagement_Click"/>
                <MenuItem Header="Quản lý Sách" Click="MenuItem_BookManagement_Click"/>
            </MenuItem>
            <MenuItem Header="_Nghiệp vụ">
                <MenuItem Header="Mượn sách" Click="MenuItem_RentBook_Click"/>
                <MenuItem Header="Lịch sử mượn" Click="MenuItem_RentalHistory_Click"/>
            </MenuItem>
            <!--<MenuItem Header="_Đăng xuất" Click="MenuItem_Logout_Click"/>-->
        </Menu>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>