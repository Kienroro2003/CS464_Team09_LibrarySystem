<Window x:Class="LS.View.Book"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Book" Height="450" Width="800" Loaded="Window_Loaded">

        <DockPanel LastChildFill="True" Margin="10">

            <!-- Hàng trên: Search box + Search button (Dock Right) -->
            <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,10">
            <Label Content="QUẢN LÝ SÁCH" FontWeight="ExtraBold" Margin="0,0,220,0" Width="150" Height="30" />
            <TextBox x:Name="txtSearch"
                     Width="250" Height="30"
                     Margin="0,0,10,0"
                     VerticalContentAlignment="Center"
                     ToolTip="Nhập từ khóa tìm kiếm"
                     Tag="Search..."
                    />
                    <Button x:Name="btnSearch"
                    Content="Tìm kiếm"
                    Width="100" Height="30"/>
            </StackPanel>

            <!-- Hàng thứ 2: Add New + ComboBox lọc thể loại -->
            <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,0,0,10">
                <Button x:Name="btnAddNew"
                    Content="Thêm Mới"
                    Width="100" Height="30"
                    Margin="0,0,10,0" Click="BtnAddNew_Click"/>
                <ComboBox x:Name="cbCategory"
                      Width="180" Height="30">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Fiction"/>
                    <ComboBoxItem Content="Science"/>
                    <ComboBoxItem Content="History"/>
                </ComboBox>
            </StackPanel>

            <!-- Hàng thứ 3: DataGrid hiển thị list sách -->
            <DataGrid x:Name="dgBooks"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Height="350"
                  Margin="0,0,0,10">
                <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="15"/>
                <DataGridTextColumn Header="Tên sách" Binding="{Binding name}" Width="*"/>
                <DataGridTextColumn Header="Tác giả" Binding="{Binding author}" Width="100"/>
                <DataGridTextColumn Header="NXB" Binding="{Binding publisher}" Width="80"/>
                <DataGridTextColumn Header="Thể loại" Binding="{Binding category}" Width="80"/>
                <DataGridTextColumn Header="Số Trang" Binding="{Binding page}" Width="60"/>
                <DataGridTextColumn Header="Số lượng" Binding="{Binding quanlity}" Width="60"/>
                <DataGridTextColumn Header="Hình ảnh" Binding="{Binding url_image}" Width="90"/>

                    <!-- Cột nút Sửa -->
                    <DataGridTemplateColumn Header="Sửa" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="btnEdit" Content="Edit" Width="60"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Cột nút Xóa -->
                    <DataGridTemplateColumn Header="Xóa" Width="60">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="btnDelete" Content="Delete" Width="60"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>

                <!-- Hai hàng dữ liệu mẫu -->
                <DataGrid.Items>
                    <!--<local:BookItem Title="Book B" Author="Author B" Category="Science" Price="$15"/>-->
                </DataGrid.Items>
            </DataGrid>

        </DockPanel>
</Window>
