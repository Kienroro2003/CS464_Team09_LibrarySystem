<Window x:Class="LS.RentBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LS"
        mc:Ignorable="d"
        Title="Rent Book" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Chọn độc giả:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <ComboBox x:Name="UserComboBox" Grid.Row="0" Grid.Column="1" Margin="5"/>
                <!--<TextBox Grid.Row="0" Grid.Column="1" Margin="5" Text="Username" IsEnabled="False"/>-->

                <Label Content="Ngày bắt đầu:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <DatePicker x:Name="StartDatePicker" Grid.Row="1" Grid.Column="1" Margin="5"/>

                <Label Content="Ngày kết thúc:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="SemiBold"/>
                <DatePicker x:Name="EndDatePicker" Grid.Row="1" Grid.Column="3" Margin="5"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,15,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="5">
                <DockPanel>
                    <TextBlock Text="Tìm kiếm sách" DockPanel.Dock="Top" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <TextBox x:Name="SearchBookTextBox" DockPanel.Dock="Top" Margin="0,0,0,10"/>
                    <Button x:Name="AddBookButton" Content="Thêm vào giỏ" DockPanel.Dock="Bottom" Margin="0,10,0,0"/>
                    <ListView x:Name="BookSearchResultsListView">
                    </ListView>
                </DockPanel>
            </Border>

            <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Padding="10" CornerRadius="5" Margin="15,0,0,0">
                <DockPanel>
                    <TextBlock Text="Sách đã chọn" DockPanel.Dock="Top" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                    <DataGrid x:Name="OrderDetailGrid" AutoGenerateColumns="False" CanUserAddRows="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID Sách" Binding="{Binding book_id}" Width="*"/>
                            <DataGridTextColumn Header="Tên sách" Binding="{Binding Book.name}" Width="2*"/>
                            <DataGridTextColumn Header="Số lượng" Binding="{Binding quanlity}" Width="*"/>
                            <DataGridTemplateColumn Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button x:Name="DeleteButton" Content="Xóa" CommandParameter="{Binding book_id}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>
        </Grid>


        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="ConfirmButton" Content="Xác nhận thuê" Width="120" Height="35" Background="DodgerBlue" Foreground="White" FontWeight="Bold"/>
            <Button x:Name="CancelButton" Content="Hủy" Width="100" Height="35" Margin="10,0,0,0"/>
        </StackPanel>

    </Grid>
</Window>
